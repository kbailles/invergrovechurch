<div class="contact-wrapper" ng-controller="ContactCtrl as vm">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Contact Us</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>You are here:</li>
                            <li><a href="@Url.Action("Index", "Home")"><strong>Home</strong></a></li>
                            <li>Contact Us</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-content" ng-cloak>
        <div class="container">
            <div class="row">
                <div id="ContactForm" class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                    <h3 class="title">Send Us an Email</h3>
                    <p>To send us your questions, comments or concerns, fill out the information below and then click the Send button.</p>

                    <div class="divider"></div>

                    <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert($index)">{{alert.msg}}</alert>

                    <form name="form" novalidate>
                        <fieldset class="reply">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label>Name: <span class="warning">*</span></label>
                                    <input class="form-control" name="name" ng-model="vm.contactUsObj.name" type="text" maxlength="100" required>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label>Email: <span class="warning">*</span></label>
                                    <input class="form-control" name="email" ng-model="vm.contactUsObj.email" type="email" maxlength="100" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <label>Subject: <span class="warning">*</span></label>
                                    <input class="form-control" name="subject" ng-model="vm.contactUsObj.subject" type="text" maxlength="100" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <label>Message: <span class="warning">*</span></label>
                                    <textarea class="form-control" name="comments" ng-model="vm.contactUsObj.comments" rows="3" cols="40" maxlength="240" required></textarea>
                                </div>
                            </div>
                        </fieldset>

                        <button ng-disabled="form.$invalid" ng-click="vm.sendContactUsMessage()" disabled class="btn btn-normal btn-color submit bottom-pad">Send</button>
                        <div class="clearfix"></div>
                    </form>

                    <!-- remoed close form tag here -->
                </div>
                <div class="col-lg-4 col-md-4 col-xs-12 col-sm-6">
                    <div class="address widget">
                        <h3 class="title">Inver Grove Church</h3>
                        <ul>
                            <li>
                                <i class="fa fa-map-marker"></i>
                                <p>
                                    <strong class="contact-pad">Address: </strong>
                                    Inver Grove church of Christ <br>
                                    8777 Courthouse Blvd <br>
                                    Inver Grove Heights MN 55077
                                </p>
                            </li>
                            <li>
                                <i class="fa fa-phone"></i>
                                <p>
                                    <strong>Phone: </strong>
                                    (651) 457-1189
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="our-location row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h3 class="title">Our Location</h3>
                    <div class="church-location" ig-google-map></div>
                </div>
            </div>
            <div class="divider"></div>
        </div>
    </div>
</div>
