@model InverGrove.Domain.Interfaces.ISermon

<div class="sermons-wrapper">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Sermons</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>You are here:</li>
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("ViewSermons", "Sermon")">Sermons</a></li>
                            <li>@this.Model.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="sermons-content">
        <div class="container">
            <div class="row">
                <div class="sermons-block col-lg-9 col-md-9 col-sm-8 col-xs-12">

                    <header class="sermon-header">
                        <h3 class="sermon-title">@this.Model.Title</h3>
                        <div class="sermon-meta">
                            <div class="sermon-meta-date">
                                <i class="fa fa-calendar"></i>
                                <span>@this.Model.SermonDate.ToString("MMMM d yyyy")</span>
                            </div>
                            <div class="sermon-entry-meta-speaker">
                                <i class="fa fa-user"></i>
                                <span>@this.Model.Speaker</span>
                            </div>
                            <div class="sermon-entry-meta-tags">
                                <i class="fa @(this.Model.Tags.Split(',').Length > 1 ? "fa-tags" : "fa-tag")"></i>

                                @foreach (var tag in this.Model.Tags.Split(','))
                                {
                                    <span>@tag</span>
                                }
                            </div>
                        </div>
                    </header>
                    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/@this.Model.SoundCloudId&amp;color=2eaef0&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false&amp;show_artwork=false"></iframe>
                    <div class="divider"></div>
                </div>

                <div class="sidebar col-lg-3 col-md-3 col-sm-4 col-xs-12">
                    @*
                        Reserved: Don't know what I want to be in the sidebar on this page yet...
                    *@
                </div>
            </div>
        </div>
    </div>
</div>