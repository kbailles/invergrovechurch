@model InverGrove.Domain.Interfaces.ISermon

<style>
    .sermon-date a.date {
        background: #fff;
        display: block;
        float: left;
        margin-right: 10px;
        text-align: center;
        text-decoration: none;
        width: 55px;
        border-radius: 2px;
    }

        .sermon-date a.date i {
            background-color: #1889C1;
            border-top: 1px solid #F3F3F3;
            color: #FFFFFF;
            display: block;
            font-size: 11px;
            font-style: normal;
        }

        .sermon-date a.date strong {
            color: #1889C1;
            display: block;
            font-size: 27px;
            font-weight: normal;
        }

    .sermon-entry-meta-speaker {
        margin-bottom: 10px;
        margin-right: 10px;
        font-size: 14px;
        vertical-align: top;
    }

    .sermon-entry-meta-tags {
        margin-bottom: 10px;
        margin-right: 10px;
        font-size: 14px;
        vertical-align: top;
    }

    .sermon-entry-meta-comments {
        margin-bottom: 10px;
        font-size: 14px;
        vertical-align: top;
    }
    .sermon-meta-date {
display: inline-block;
margin-right: 10px;
margin-bottom: 10px;
font-size: 14px;
vertical-align: top;
}
    .sermon-meta i {
        margin-right: 4px;
    }

    .sermon-entry-meta-speaker, .sermon-entry-meta-tags, .sermon-entry-meta-comments {
        display: inline-block;
    }

    .sermon-divider {
        margin: 25px 0;
        background: url('../../Content/images/bg_off.png') repeat;
        content: "";
        height: 5px;
    }

    .sermons-content {
        padding: 60px 0 0;
    }

    .sermon-title {
        margin-top: 0;
    }

    .input-group {
        position: relative;
        display: table;
        border-collapse: separate;
    }

        .input-group-addon, .input-group-btn, .input-group .form-control {
            display: table-cell;
        }

    .input-group-addon, .input-group-btn {
        width: 1%;
        white-space: nowrap;
        vertical-align: middle;
    }

    .subscribe-btn {
        height: 44px;
        padding: 6px 16px;
        background-image: none;
        color: #fff;
        text-shadow: none;
        font-size: 16px;
        border: none;
        text-shadow: none !important;
        -webkit-transition: all .5s ease-in-out !important;
        -moz-transition: all .5s ease-in-out !important;
        -o-transition: all .5s ease-in-out !important;
        -ms-transition: all .5s ease-in-out !important;
    }

    .btn:focus, .subscribe-btn, .progress .progress-bar, .accordionMod .panel-heading .current, #current:after, .tp-leftarrow.default:hover, .tp-rightarrow.default:hover, .nivo-prevNav:hover, .nivo-nextNav:hover, .contact-box:hover, #options li a.selected, .ch-info-front {
        background: #2eaef0;
    }

    .btn-color-blue {
        background: #2eaef0;
        cursor: pointer;
    }
        .btn-color-blue:hover {
            background-color: #0488CD;
            color: #fff;
        }
    .btn-color-red {
        background: #E24747;
        cursor: pointer;
    }
        .btn-color-red:hover {
            background-color: #E24747;
            color: #fff;
        }

    .input-group .form-control:last-child, .input-group-addon:last-child, .input-group-btn:last-child > .btn, .input-group-btn:last-child > .btn-group > .btn, .input-group-btn:last-child > .dropdown-toggle, .input-group-btn:first-child > .btn:not(:first-child), .input-group-btn:first-child > .btn-group:not(:first-child) > .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .input-group-btn:last-child > .btn, .input-group-btn:last-child > .btn-group {
        margin-left: 0;
    }

    a:hover {
        text-decoration: none;
        outline: none;
        color: #777777;
    }
</style>

<div class="sermons-wrapper" ng-controller="ContactCtrl">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Sermons</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>You are here:</li>
                            <li><a href="@Url.Action("Index", "Home")"><strong>Home</strong></a></li>
                            <li><a href="@Url.Action("ViewSermons", "Sermon")"><strong>Sermons</strong></a></li>
                            <li>@Model.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="sermons-content">
        <div class="container">
            <div class="row">
                <div class="sermons-block col-lg-9 col-md-9 col-sm-8 col-xs-12">

                    <header class="sermon-header">
                        <h3 class="sermon-title">@Model.Title</h3>
                        <div class="sermon-meta">
                            <div class="sermon-meta-date">
                                <i class="fa fa-calendar"></i>
                                <span class="sermon-entry-meta-date-month">August</span>
                                <span class="sermon-entry-meta-date-day">23,</span>
                                <span class="sermon-entry-meta-date-year">2013</span>
                            </div>
                            <div class="sermon-entry-meta-speaker">
                                <i class="fa fa-user"></i>
                                <a href="#" class="sermon-entry-meta-author">@Model.Speaker</a>
                            </div>
                            <div class="sermon-entry-meta-tags">
                                <i class="fa fa-tags"></i>
                                <a href="#">Web Design</a>,
                                <a href="#">Branding</a>
                            </div>
                        </div>
                    </header>
                    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/@(Model.SoundCloudId)&amp;color=2eaef0&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false&amp;show_artwork=false"></iframe>
                    <div class="divider"></div>
                </div>

                <div class="sidebar col-lg-3 col-md-3 col-sm-4 col-xs-12">
                    <div class="widget search-form" style="margin-bottom: 35px;">
                        <div class="input-group">
                            <input type="text" value="Search..." onfocus="if(this.value=='Search...')this.value='';" onblur="if(this.value=='')this.value='Search...';" class="search-input form-control">
                            <span class="input-group-btn">
                                <button type="submit" class="subscribe-btn btn btn-color-blue"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                    <div class="widget speakers" style="margin-bottom: 35px;">
                        <h3 class="title">Speakers</h3>
                        <ul>
                            <li><a href="#">Antoine Halloway (5)</a></li>
                            <li><a href="#">Rennie Frazier (0)</a></li>
                            <li><a href="#">Bryant Bailles (1)</a></li>
                            <li><a href="#">Jim Echols (0)</a></li>
                        </ul>
                    </div>
                    <div class="widget tags" style="margin-bottom: 35px;">
                        <h3 class="title">Tags</h3>
                        <ul>
                            <li><a href="#">Wordpress (66)</a></li>
                            <li><a href="#">Drupal (28)</a></li>
                            <li><a href="#">Web Design (103)</a></li>
                            <li><a href="#">Logo (58)</a></li>
                            <li><a href="#">Joomla (4)</a></li>
                            <li><a href="#">Illustration (6)</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
