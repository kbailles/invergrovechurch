<div class="sermons-wrapper">

    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Sermons</h2>
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>You are here:</li>
                            <li><a href="@Url.Action("Index", "Home")"><strong>Home</strong></a></li>
                            <li>Sermons</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="sermons-content" ng-cloak>
        <div class="container">
            <div class="row">

                <div class="sidebar col-lg-3 col-lg-push-9 col-md-3 col-md-push-9 col-sm-4 col-sm-push-8 col-xs-12">
                    <div class="widget search-form">
                        <div class="input-group">
                            <input type="text" placeholder="Search..." class="search-input form-control" ng-model="vm.titleFilter">
                            <span class="input-group-btn">
                                <button type="submit" class="subscribe-btn btn btn-color" ng-class="vm.titleFilter.length > 0 ? 'btn-warning' : ''" ng-click="vm.titleFilter = ''"><i class="fa" ng-class="vm.titleFilter.length <= 0 ? 'fa-search' : 'fa-remove'"></i></button>
                            </span>
                        </div>
                    </div>

                    <div class="widget speakers">
                        <h3 class="title">Filter by Speaker</h3>
                        <div style="padding-left: 20px;">
                            <select ng-model="vm.speakerFilter" class="form-control">
                                <option value="">Select speaker</option>
                                <option ng-repeat="(key, value) in vm.filteredSpeakers()" value="{{key}}">{{key}} ({{value}})</option>
                            </select>
                        </div>
                    </div>

                    <div class="widget tags">
                        <h3 class="title">Filter by Tags</h3>
                        <ul style="list-style: none;padding-left: 20px;">
                            <li ng-repeat="(key, value) in vm.filteredTags()">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" ng-click="vm.toggleTagChecked(key)"> {{key}} ({{value}})
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="sermons-block col-lg-9 col-lg-pull-3 col-md-9 col-md-pull-3 col-sm-8 col-sm-pull-4 col-xs-12">
                    <h3 class="title">Listen to Sermons</h3>

                    <article class="sermon hentry" ng-repeat="sermon in vm.sermons | filter: { title: vm.titleFilter, speaker: vm.speakerFilter } | selectedTags: vm.tagsFilter">
                        <div class="sermon-content-wrap">
                            <header class="sermon-header">
                                <div class="sermon-date">
                                    <a class="date" href="#"><strong ng-bind="sermon.sermonDate | date : 'dd'"></strong><i ng-bind="sermon.sermonDate | date : 'MMM'"></i></a>
                                </div>
                                <h3 class="sermon-title"><a ng-href="#/SermonDetail/{{sermon.sermonId}}" ng-bind="sermon.title"></a></h3>
                                <div class="sermon-meta">
                                    <div class="sermon-entry-meta-speaker">
                                        <i class="fa fa-user"></i>
                                        {{ sermon.speaker }}
                                    </div>
                                    <div class="sermon-entry-meta-tags">
                                        <i class="fa" ng-class="sermon.tags.split(',').length > 1 ? 'fa-tags' : 'fa-tag'"></i>
                                        <div class="tags-container" ng-repeat="tag in sermon.tags.split(',')">
                                            {{ tag }}{{ ! $last ? ',&nbsp;' : '' }}
                                        </div>
                                    </div>
                                </div>
                            </header>
                        </div>

                        <div class="clearfix"></div>
                        <div ng-show="! $last" class="sermon-divider"></div>
                    </article>

                    <div class="divider"></div>
                </div>

            </div>
        </div>
    </div>

</div>