@model InverGrove.Domain.ViewModels.LoginUser
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.Title = "Log In";
}

<div id="ContactForm" class="login-content" ng-controller="AccountCtrl as vm">
    <h3 class="title">Log In</h3>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form", novalidate = true }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "")

        <fieldset class="reply">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label for="UserName">Username: <span class="warning">*</span></label>
                    <input class="form-control" id="UserName" name="UserName" type="text" maxlength="50" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label for="Password">Password: <span class="warning">*</span></label>
                    <input class="form-control" id="Password" name="Password" type="password" maxlength="50" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="checkbox">
                        <label for="RememberMe">
                            <input class="check-box" data-val="true" id="RememberMe" name="RememberMe" type="checkbox" value="true" />
                            <input name="RememberMe" type="hidden" value="false"/>
                            Remember Me
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>

        <button ng-click="vm.login()" btn-loading="vm.busy" data-loading-text="Logging In..." class="btn btn-normal btn-color" style="width: 100%;">Log In</button>
        <div class="clearfix"></div>
    }
</div>