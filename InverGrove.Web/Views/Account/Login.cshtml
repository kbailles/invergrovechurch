@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.Title = "Log In";
}

<div id="ContactForm" class="login-content" ng-controller="AccountCtrl as vm">
    <h3 class="title">Log In</h3>

    <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert($index)">{{alert.msg}}</alert>

    <form name="form" novalidate>
        <fieldset class="reply">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Username: <span class="warning">*</span></label>
                    <input class="form-control" ng-model="vm.loginCredentials.userName" type="text" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Password: <span class="warning">*</span></label>
                    <input class="form-control" ng-model="vm.loginCredentials.password" type="password" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="checkbox">
                        <label>
                            <input ng-model="vm.loginCredentials.rememberMe" type="checkbox" /> Remember Me
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>

        <button ng-disabled="form.$invalid" ng-click="vm.login()" disabled class="btn btn-normal btn-color submit" style="width: 100%;">Login</button>
        <div class="clearfix"></div>
    </form>
</div>