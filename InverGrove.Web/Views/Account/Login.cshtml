
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.Title = "Log in";
}

<div id="ContactForm" class="login-content">
    <h3 class="title">Login</h3>

    <form class="reply">
        <fieldset>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Username: <span class="warning">*</span></label>
                    <input class="form-control" id="username" name="username" type="text" value="" required="">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Password: <span class="warning">*</span></label>
                    <input class="form-control" id="password" name="password" type="password" value="" required="">
                </div>
            </div>
        </fieldset>
        <button class="btn btn-normal btn-color submit" style="width: 100%;">Login</button>
        <div class="clearfix"></div>
    </form>
</div>
