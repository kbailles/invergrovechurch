    @using (Html.BeginForm("Add", "Sermon", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", novalidate = true, name = "form" }))
    {
        @Html.AntiForgeryToken()

        <fieldset class="reply">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>SoundCloud Id: <span class="warning">*</span></label>
                    <input class="form-control" name="UserName" ng-model="vm.loginCredentials.userName" type="text" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Sermon Date: <span class="warning">*</span></label>
                    <input class="form-control" name="UserName" ng-model="vm.loginCredentials.userName" type="text" required/>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Title: <span class="warning">*</span></label>
                    <input class="form-control" name="Password" ng-model="vm.loginCredentials.password" type="password" required/>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Speaker: <span class="warning">*</span></label>
                    <input class="form-control" name="Password" ng-model="vm.loginCredentials.password" type="password" required />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Tags: <span class="warning">*</span></label>
                    <input class="form-control" name="Password" ng-model="vm.loginCredentials.password" type="password" required />
                </div>
            </div>
        </fieldset>
        
        <button ng-disabled="form.$invalid" ng-click="vm.login()" disabled class="btn btn-normal btn-color submit" style="width: 100%;">Login</button>
        <div class="clearfix"></div>
    }


    <div class="row">
        <div class="col-xs-12">
            <h3 class="title">Tables</h3>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Speaker</th>
                    <th>Tags</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="sermon in base.sermons">
                    <td>{{sermon.sermonDate| date:'MMMM d yyyy'}}</td>
                    <td>{{sermon.title}}</td>
                    <td>{{ sermon.speaker }}</td>
                    <td>
                        <div class="tags-container" ng-repeat="tag in sermon.tags.split(',')">
                            {{ tag }}{{ ! $last ? ',&nbsp;' : '' }}
                        </div>
                    </td>
                    <td>
                        <button type="submit" class="subscribe-btn btn btn-color btn-warning"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
