<div class="modal-header">
    <h3 class="modal-title">Add Sermon</h3>
</div>
<div class="modal-body">
    <div class="home-wrapper">
        @using (Html.BeginForm("Add", "Sermon", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", novalidate = true, name = "form" }))
        {
            @Html.AntiForgeryToken()

            <fieldset class="reply">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Title: <span class="warning">*</span></label>
                        <input class="form-control" name="Title" ng-model="vm.loginCredentials.title" type="text" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Speaker: <span class="warning">*</span></label>
                        <input class="form-control" name="Speaker" ng-model="vm.loginCredentials.speaker" type="text" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Sermon Date: <span class="warning">*</span></label>
                        <input class="form-control" name="SermonDate" ng-model="vm.loginCredentials.sermonDate" type="text" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>Tags: <span class="warning">*</span></label>
                        <input class="form-control" name="Tags" ng-model="vm.loginCredentials.tags" type="password" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <label>SoundCloud Id: <span class="warning">*</span></label>
                        <input class="form-control" name="SoundCloudId" ng-model="vm.newSermon.soundCloudId" type="text" required />
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-color btn-small" ng-click="modalCtrl.addSermon()">Add</button>
    <button class="btn btn-small btn-warning" ng-click="modalCtrl.dismissModal()">Cancel</button>
</div>