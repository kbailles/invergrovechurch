<div class="modal-header">
    <h3 class="modal-title">Add Sermon</h3>
</div>
<div class="modal-body">
    <form name="form" novalidate>
        <fieldset class="reply">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label>Title: <span class="warning">*</span></label>
                    <input class="form-control" ng-model="modalCtrl.sermon.title" type="text" required />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <label>Speaker: <span class="warning">*</span></label>
                    <input class="form-control" ng-model="modalCtrl.sermon.speaker" type="text" required />
                </div>
                <div class="col-xs-6">
                    <label>Link to SoundCloud: <span class="warning">*</span></label>
                    <select class="form-control" ng-model="modalCtrl.sermon.soundCloudId" ng-options="track.id as track.title for track in modalCtrl.soundCloudSermons" required>
                        <option value="">Select Track</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <label>Tags: <span class="warning">*</span></label>
                    <div class="input-group">
                        <input class="form-control" ng-model="modalCtrl.newTag" placeholder="Add tag..." type="text" />
                        <span class="input-group-btn">
                            <button type="button" class="subscribe-btn btn btn-color" ng-click="modalCtrl.addTag()">Add</button>
                        </span>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="tags">
                        <button type="button" ng-repeat="(index, tag) in modalCtrl.tagsAsArray()" class="btn btn-color" style="margin: 5px;" ng-click="modalCtrl.removeTag(index)">{{tag}} <i class="fa fa-remove"></i></button>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 picker-holder--inline-fixed">
                    <label>Sermon Date: <span class="warning">*</span></label>
                    <input class="form-control" ng-model="modalCtrl.sermon.sermonDate" ig-pickadate required />
                </div>
            </div>
        </fieldset>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-normal btn-color" ng-disabled="form.$invalid || modalCtrl.busy" btn-loading="modalCtrl.busy" data-loading-text="Adding..." ng-click="modalCtrl.addSermon()">Add</button>
    <button class="btn btn-normal btn-warning" btn-loading="modalCtrl.busy" data-loading-text="Cancel" ng-click="modalCtrl.dismissModal()">Cancel</button>
</div>