<div class="row">
    <div class="col-xs-12">
        <h3 class="title">Tables</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Speaker</th>
                    <th>Tags</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="sermon in base.sermons">
                    <td>{{sermon.sermonDate| date:'MMMM d yyyy'}}</td>
                    <td>{{sermon.title}}</td>
                    <td>{{ sermon.speaker }}</td>
                    <td>
                        <div class="tags-container" ng-repeat="tag in sermon.tags.split(',')">
                            {{ tag }}{{ ! $last ? ',&nbsp;' : '' }}
                        </div>
                    </td>
                    <td>
                        <a class="subscribe-btn btn btn-color btn-warning" ng-href="/Member/Sermon/Delete?sermonId={{sermon.sermonId}}"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>