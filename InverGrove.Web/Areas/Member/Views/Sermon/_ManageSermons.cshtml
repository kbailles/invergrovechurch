<div class="manager-sermons-wrapper">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Manage Sermons</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>You are here:</li>
                            <li><a href="@Url.Action("Index", "Home")"><strong>Home</strong></a></li>
                            <li>Manage Sermons</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="manager-sermons-content" style="padding: 60px 0 0;" ng-cloak>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <button class="btn btn-normal btn-color bottom-pad" ng-click="vm.openAddSermonModal()">Add Sermon</button>

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Speaker</th>
                            <th>Tags</th>
                            <th style="width: 100px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="sermon in vm.sermons">
                            <td>{{sermon.sermonDate | date:'MMMM d yyyy'}}</td>
                            <td>{{sermon.title}}</td>
                            <td>{{ sermon.speaker }}</td>
                            <td>
                                <div class="tags-container" ng-repeat="tag in sermon.tags.split(',')">
                                    {{ tag }}{{ ! $last ? ',&nbsp;' : '' }}
                                </div>
                            </td>
                            <td style="text-align: right;">
                                <button class="btn btn-color btn-small" ng-click="vm.editSermon(sermon)"><i class="fa fa-pencil"></i></button>
                                <button class="btn btn-color btn-small btn-warning"><i class="fa fa-remove"></i></button>
                            </td>
                        </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>