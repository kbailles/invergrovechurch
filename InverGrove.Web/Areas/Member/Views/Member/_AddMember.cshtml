<div class="modal-header">
    <h3 class="modal-title">Add A Person To The Church Directory</h3>
</div>
<div class="modal-body">
    <form novalidate name="form">

        <div class="row">
            <div class="col-xs-6">
                <label>First Name: <span class="warning">*</span></label>
                <input class="form-control" name="firstName" ng-model="modalCtrl.personObj.firstName" type="text" maxlength="50" required />
            </div>
            <div class="col-xs-6">
                <label>Last Name: <span class="warning">*</span></label>
                <input class="form-control" name="lastName" ng-model="modalCtrl.personObj.lastName" type="text" maxlength="50" required />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>Address:</label>
                <input class="form-control" name="address1" ng-model="modalCtrl.personObj.address1" type="text" maxlength="50" />
            </div>
            <div class="col-xs-6">
                <label>Apartment #:</label>
                <input class="form-control" name="address2" ng-model="modalCtrl.personObj.address2" type="text" maxlength="50" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>City:</label>
                <input class="form-control" name="city" ng-model="modalCtrl.personObj.city" maxlength="50" type="text" />
            </div>
            <div class="col-xs-6">
                <label>State:</label>
                <select name="gender" ng-model="modalCtrl.personObj.state" class="form-control" >
                    <option value="MN">Minnesota</option>
                    <option value="WI">Wisconsin</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>Zip Code:</label>
                <input class="form-control" name="zipCode" ng-model="modalCtrl.personObj.zipCode" maxlength="5" type="text" />
            </div>
            <div class="col-xs-6">
                <label>Email Address:</label>
                <input class="form-control" name="primaryEmail" ng-model="modalCtrl.personObj.primaryEmail" maxlength="50" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>Cell Phone:</label>
                <input class="form-control" name="phoneNumbers[0]" ng-model="modalCtrl.personObj.phoneNumbers[0]" maxlength="20" type="text" />
            </div>
            <div class="col-xs-6">
                <label>Home / Other Phone:</label>
                <input class="form-control" name="phoneNumbers[1]" ng-model="modalCtrl.personObj.phoneNumbers[1]" maxlength="20" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <input type="radio" name="isUser" ng-model="modalCtrl.personObj.isUser" ng-value="true">
                <label class="LeftCushion">Allow access to login as Member</label>
            </div>
            <div class="col-xs-6">
                <input type="radio" name="isUser" ng-model="modalCtrl.personObj.isUser" value="false">
                <label>No access to Member area of website.</label>             
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <label>Gender: <span class="warning">*</span></label>               
                <select name="gender" ng-model="modalCtrl.personObj.gender" class="form-control" style="width: 100px;" required>
                    <option value="f">Female</option>
                    <option value="m">Male</option>
                </select>
            </div>
            <div class="col-xs-6">
                <label>Is this person been scripturally baptized? <span class="warning">*</span></label>           
                <select name="isBaptized" ng-model="modalCtrl.personObj.isBaptized" class="form-control" style="width: 90px;" required>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>  
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-normal btn-color" ng-disabled="form.$invalid" btn-loading="modalCtrl.busy" data-loading-text="Adding..." ng-click="modalCtrl.addPerson()">Add</button>
    <button class="btn btn-normal btn-warning" ng-click="modalCtrl.dismissModal()">Cancel</button>
</div>